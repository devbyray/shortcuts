    <title>{{name}}'s links</title>
    <link
      href="tailwind.css"
      rel="stylesheet"
    />
    <style>
      h1 {
        color: #ffc600;
        font-size: 3rem;
        margin-bottom: 2rem;
      }
      .blog__wrapper {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
      }
      .blog__item {
        background: #fff;
        padding: 1rem;
        box-shadow: 3px 7px 20px 0px rgb(0 0 0 / 20%);
        margin-bottom: 2rem;
        border-radius: 5px;
      }
      .blog__item h2 {
        font-size: 2rem;
      }

      .blog__item a {
        background-color: #ffc600;
        color: #000;
        display: inline-block;
        padding: 0.5rem;
        margin: 0.5rem 0;
        border-radius: 5px;
      }
    </style>
  </head>
